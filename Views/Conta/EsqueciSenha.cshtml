@{
    ViewData["Title"] = "Esqueci minha senha";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Recuperação de Senha</h4>
                </div>
                <div class="card-body">
                    @if (TempData["MensagemErro"] != null)
                    {
                        <div class="alert alert-danger">@TempData["MensagemErro"]</div>
                    }
                    @if (TempData["MensagemSucesso"] != null)
                    {
                        <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-mail cadastrado:</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="seuemail@exemplo.com" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Enviar link de recuperação</button>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Login">Voltar ao Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
