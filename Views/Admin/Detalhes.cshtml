@model LoginAppMVC.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container mt-5">
    <h2 class="mb-4">Detalhes do Usuário</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a>
        <a asp-action="Excluir" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Excluir</a>
    </div>
</div>
